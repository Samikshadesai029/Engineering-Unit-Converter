import java.util.Scanner;

public class Converter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("=== Professional Engineering Converter ===");
        System.out.println("1. Pressure: Pascals (Pa) to PSI");
        System.out.println("2. Power: Watts (W) to Horsepower (hp)");
        System.out.println("3. Temperature: Celsius (C) to Kelvin (K)");
        System.out.print("\nSelect conversion (1-3): ");
        
        int choice = scanner.nextInt();

        switch (choice) {
            case 1:
                System.out.print("Enter Pascals: ");
                double pa = scanner.nextDouble();
                System.out.printf("Result: %.4f PSI\n", (pa * 0.000145038));
                break;
            case 2:
                System.out.print("Enter Watts: ");
                double watts = scanner.nextDouble();
                System.out.printf("Result: %.2f hp\n", (watts / 745.7));
                break;
            case 3:
                System.out.print("Enter Celsius: ");
                double celsius = scanner.nextDouble();
                System.out.printf("Result: %.2f K\n", (celsius + 273.15));
                break;
            default:
                System.out.println("Invalid Selection.");
        }
        
        System.out.println("==========================================");
        scanner.close();
    }
}
